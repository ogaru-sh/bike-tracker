{
  "name": "bike-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["api", "app"],
  "description": "バイク走行ルートをバックグラウンドGPSで記録・管理するiOSアプリ",
  "scripts": {
    "dev:api": "npm run dev -w api",
    "dev:app": "npm run start -w app",
    "generate:openapi": "npm run generate:openapi -w api",
    "generate:hooks": "npm run generate -w app",
    "generate": "npm run generate:openapi && npm run generate:hooks",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "npm run test -w api"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15"
  }
}
