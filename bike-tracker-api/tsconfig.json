{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["@cloudflare/workers-types"],
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@bike-tracker/shared": ["../packages/shared/src/index.ts"],
      "@bike-tracker/shared/*": ["../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "../packages/shared/src/**/*"]
}
