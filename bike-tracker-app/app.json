{
  "expo": {
    "name": "バイクトラッカー",
    "slug": "bike-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "bike-tracker",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ogaru.biketracker",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "走行ルートを記録するために位置情報を使用します",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "バックグラウンドで走行ルートを記録するために位置情報を使用します",
        "UIBackgroundModes": ["location"]
      }
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-apple-authentication",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "バックグラウンドで走行ルートを記録するために位置情報を使用します",
          "isIosBackgroundLocationEnabled": true
        }
      ]
    ]
  }
}
